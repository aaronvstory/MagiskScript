#!/system/bin/sh

# Magisk services initialization
service magiskd /sbin/magiskd
    class main
    user root
    group root
    seclabel u:r:magisk:s0

# Post-fs-data script
on post-fs-data
    exec /sbin/magisk --post-fs-data

# Service manager (optional)
on service_manager_ready
    exec /sbin/magisk --service

# Late start (optional)
on late-fs
    exec /sbin/magisk --late-start
